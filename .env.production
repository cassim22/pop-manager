# Configurações de produção
VITE_API_URL=https://api.pops-management.com/api
VITE_USE_MOCK_API=false

# Configurações do mapa
VITE_MAPBOX_TOKEN=your_production_mapbox_token
VITE_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

# Configurações de upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Configurações de notificações
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=3000

# Configurações de debug
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error